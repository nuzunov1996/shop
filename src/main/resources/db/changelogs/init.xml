<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="
                            http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="init" author="nuzunov">
        <preConditions onErrorMessage="Error occurred while executing initial preconditions"
                       onFail="MARK_RAN"
                       onFailMessage="Unexpected error occurred">
            <not>
                <tableExists tableName="products"/>
            </not>
        </preConditions>
        <createTable tableName="products">
            <column name="id" type="bigint" autoIncrement="true" startWith="1001">
                <constraints primaryKey="true" primaryKeyName="pk_products_id"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="category" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
            <column name="quantity" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="date" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_date" type="date">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <sqlFile path="sql/fill_product_table.sql" relativeToChangelogFile="true"/>
    </changeSet>
</databaseChangeLog>